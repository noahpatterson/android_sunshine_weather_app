    <!--<string name="pref_art_pack_sunshine" translatable="false">https://raw.githubusercontent.com/udacity/Sunshine-Version-2/sunshine_master/app/src/main/res/drawable-xxhdpi/art_%s.png</string>-->

    <!-- add preference for icon packs-->
    <string name="icon_pack_key">Icon Packs</string>
    <string name="icon_pack_default">default</string>
    <string-array name="icon_pack_entries">
        <item>default</item>
        <item>colored</item>
        <item>mono</item>
    </string-array>
    <string-array name="icon_pack_values">
        <item>default</item>
        <item>colored</item>
        <item>mono</item>
    </string-array>
</resources>
