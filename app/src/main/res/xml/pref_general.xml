<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/app.com.example.noahpatterson.sunshine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <app.com.example.noahpatterson.sunshine.LocationEditTextPreference
        android:title="@string/location"
        android:key="@string/location"
        android:defaultValue="@string/default_location_value"
        android:inputType="text"
        android:singleLine="true"
        custom:minLength="3"
        />
    <ListPreference
        android:title="@string/temperature_units"
        android:key="@string/temperature_units"
        android:defaultValue="@string/default_temp_value"
        android:dialogTitle="@string/temperature_units"
        android:entries="@array/temperature_entries"
        android:entryValues="@array/temperature_values"
        />
    <CheckBoxPreference
        android:title="Daily Weather Notifcations"
        android:key="notification"
        android:defaultValue="true"
        android:summaryOn="enabled"
        android:summaryOff="disabled"
        />
</PreferenceScreen>